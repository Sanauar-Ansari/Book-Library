<div class="header">
  <h1 class="mt-5 mb-4">Products</h1>
</div>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p=>{ %>

    <tr>
      <th><%=p.id%></th>
      <td><%=p.name%></td>
      <td><%=p.desc%></td>
      <td scope="col"><%=p.price%></td>
      <td>
        <img style="width: 150px; height: 150px" src="<%=p.imageUrl%>" />
      </td>
      <td>
        <a href="/product-update/<%=p.id%>" class="btn btn-warning">Update</a>
        <!-- <a href="/delete-update/<%=p.id%>" class="btn btn-danger">Delete</a> -->
        <button class="btn btn-danger" onclick="deleteProduct('<%=p.id%>')">
          Delete
        </button>
      </td>
    </tr>
    <% })%>
  </tbody>
</table>
